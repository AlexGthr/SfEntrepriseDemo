{% extends 'base.html.twig' %}

{% block title %}Detail de l'employé{% endblock %}

{% block body %}

    <h1>Detail de l'employé</h1>
    
    <h2> {{ employe }} </h2>

    <p>
        Date de naissance : {{ employe.dateNaissance|date("d/m/Y") }}
    </p>
    <p>
        Age : {{ employe.Age }} ans
    </p>
    <p>
        Ville : {% if employe.ville %} {{ employe.ville }} {% else %} Aucune ville défini {% endif %}
    </p>
    <p>
        Date d'embauche {{ employe.dateEmbauche|date("d/m/Y") }}
    </p>
    <p>
        Entreprise : <a href="{{ path('show_entreprise', {'id':employe.entreprise.id})}}">{{ employe.entreprise }} </a>
    </p>


{% endblock %}